<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.stanford.cs108.worldcreator.Editor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Select page:"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_weight="1"
            android:id="@+id/page_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>

        <Button
            android:text="New page"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"/>
        <Button
            android:text="Delete"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"/>

        <EditText
            android:layout_weight="0.6"
            android:textSize="12dp"
            android:hint="New page name... "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



        <Button
            android:text="Save Game"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"/>
    </LinearLayout>

    <edu.stanford.cs108.worldcreator.EditorGameView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="3">

        <TextView
            android:text="Shape: "
            android:layout_column="0"
            android:layout_row="0"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0">
        </Spinner>

        <TextView
            android:text="x:"
            android:textSize="12dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="center"/>
        <EditText
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"/>

        <TextView
            android:text="y:"
            android:textSize="12dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="center"/>
        <EditText
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:padding="0dp"/>

        <EditText
            android:hint="Shape name...     "
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:padding="0dp"
            android:layout_columnSpan="2"/>

        <TextView
            android:textSize="12dp"
            android:text="width:"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="1" />
        <EditText
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:padding="0dp"
            android:layout_gravity="center"/>

        <TextView
            android:text="height"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"/>
        <EditText
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:padding="0dp"
            android:layout_gravity="center"/>



        <Button
            android:text="New"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_column="4"
            android:layout_row="0"/>
        <Button
            android:text="Delete"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_column="4"
            android:layout_row="1"/>


    </GridLayout>



</LinearLayout>
