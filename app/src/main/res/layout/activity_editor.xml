<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.stanford.cs108.worldcreator.Editor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_weight="1"
            android:id="@+id/page_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </Spinner>

        <Button
            android:text="New page"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="createPage"
            />
        <Button
            android:text="Delete"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="deletePage"
            />

        <EditText
            android:layout_weight="0.6"
            android:textSize="12dp"
            android:hint="New page name... "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/npage"
            />



        <Button
            android:text="Save Game"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:onClick="saveGame"/>
    </LinearLayout>

    <edu.stanford.cs108.worldcreator.EditorGameView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="3">

        <Spinner
            android:id="@+id/shape_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_row="0">

        </Spinner>

        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:text="x:"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/xCord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:inputType="numberDecimal"
            android:padding="0dp"
            android:textSize="12dp" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="y:"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/yCord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:inputType="numberDecimal"
            android:padding="0dp"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/shapeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:hint="Shape name...     "
            android:padding="0dp"
            android:textSize="12dp" />

        <TextView
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="width:"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:inputType="numberDecimal"
            android:padding="0dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:text="height"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:inputType="numberDecimal"
            android:padding="0dp"
            android:textSize="12dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="0"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="newShape"
            android:text="New"
            android:textSize="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="1"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="deletePage"
            android:text="Delete"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="0"
            android:text="Movable: "
            android:textSize="12dp" />

        <RadioGroup
            android:id="@+id/moveGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_row="0"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/moveable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:text="true" />

            <RadioButton
                android:id="@+id/notMovable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:text="false" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="1"
            android:text="Visible: "
            android:textSize="12dp" />

        <RadioGroup
            android:id="@+id/visibleGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_row="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/isVisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:text="true" />

            <RadioButton
                android:id="@+id/notVisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:text="false" />

        </RadioGroup>

        <EditText
            android:layout_column="4"
            android:layout_row="2" />


    </GridLayout>


</LinearLayout>
